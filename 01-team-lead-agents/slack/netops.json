{
    "display_information": {
        "name": "kagent"
    },
    "features": {
        "bot_user": {
            "display_name": "kagent",
            "always_online": false
        },
        "slash_commands": [
            {
                "command": "/kagent",
                "description": "Send message to AI Agent",
                "usage_hint": "Hello",
                "should_escape": false
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "chat:write",
                "commands",
                "incoming-webhook",
                "app_mentions:read",
                "channels:history",
                "assistant:write"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "app_mention"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}